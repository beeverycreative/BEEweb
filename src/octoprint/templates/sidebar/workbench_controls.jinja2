<div id="workbench-controls-container" >

    <button id="btn-move" class="btn btn-default btn-block model-selection" onclick="BEEwb.transform_ops.activateMove();" disabled="true">
        <i class="icon-exchange" ></i>
        <span>{{ _('Move') }}</span>
    </button>
    <br />
    <div id="axis-values">
        <form class="form-inline">

            <label for="x-axis">X </label> <input type="text" id="x-axis" name="x-axis" value="0"/><br /><br />
            <label for="y-axis">Y </label> <input type="text" id="y-axis" name="y-axis" value="0"/><br /><br />
            <label for="z-axis">Z </label> <input type="text" id="z-axis" name="z-axis" value="0"/>
        </form>
    </div>
    <br />
    <button id="btn-scale" class="btn btn-default btn-block model-selection" onclick="BEEwb.transform_ops.activateScale();" disabled="true">
        <i class="icon-crop" ></i>
        <span>{{ _('Scale') }}</span>
    </button>
    <br />
    <button id="btn-rotate" class="btn btn-default btn-block model-selection" onclick="BEEwb.transform_ops.activateRotate();" disabled="true">
        <i class="icon-refresh" ></i>
        <span>{{ _('Rotate') }}</span>
    </button>
    <hr />
    <button class="btn btn-block model-selection" id="center_selection"
            data-bind="" disabled="true" onclick="BEEwb.transform_ops.centerModel();">
        <i class="icon-bullseye" ></i>
        {{ _('Center model') }}
    </button>
    <br />
    <button class="btn btn-block model-selection" id="reset_selection"
            data-bind="" disabled="true" onclick="BEEwb.transform_ops.resetSelectedModel();">
        <i class="icon-reply-all" ></i>
        {{ _('Reset model') }}
    </button>
    <br />
    <button class="btn btn-block btn-danger model-selection" id="delete_selection"
            data-bind="" disabled="true" onclick="BEEwb.transform_ops.removeSelected();">
        <i class="icon-trash" ></i>
        {{ _('Delete') }}
    </button>
</div>
