<div class="row-fluid">
    <div class="span4">
        {{ _('File') }}: <strong data-bind="text: filename"></strong>&nbsp;<strong data-bind="visible: sd">(SD)</strong><br>
        {{ _('Approx. Total Print Time') }}: <strong data-bind="text: estimatedPrintTimeString"></strong><br>
    </div>
    <div class="span4">
        {{ _('Print Time') }}: <strong data-bind="text: printTimeString"></strong><br>
        {{ _('Print Time Left') }}: <strong data-bind="text: printTimeLeftString"></strong><br>
        {{ _('Printed') }}: <strong data-bind="text: byteString"></strong><br>
    </div>
    <div class="span4">
        <!-- ko foreach: filament -->
        <span data-bind="text: 'Filament (' + name() + '): '"></span><strong data-bind="text: formatFilament(data())"></strong><br>
        <!-- /ko -->

        {{ _('Timelapse') }}: <strong data-bind="text: timelapseString"></strong><br>
    </div>
</div>

<div class="progress">
    <div class="bar" id="job_progressBar" data-bind="style: { width: progressString() + '%' }"></div>
</div>

<div class="row-fluid print-control" style="display: none;" data-bind="visible: loginState.isUser">
    <button class="btn btn-primary span3" data-bind="click: print, enable: enablePrint(), visible: !isPaused(), css: {'btn-info': isPaused()}, attr: {title: titlePrintButton}" id="job_print">
        <i data-bind="css: {'icon-print': !isPaused(), 'icon-undo': isPaused()}"></i>
        <span data-bind="text: (isPaused() ? '{{ _('Restart') }}' : '{{ _('Print') }}')">{{ _('Print') }}</span>
    </button>
    <div class="span5"></div>
    <button class="btn span2" id="job_pause" data-bind="click: pause, enable: isOperational() && (isPrinting() || isPaused()) && loginState.isUser(), css: {active: isPaused()}, attr: {title: titlePauseButton}"><i data-bind="css: {'icon-pause': !isPaused(), 'icon-play': isPaused()}"></i> <span data-bind="visible: !isPaused()">{{ _('Pause') }}</span><span data-bind="visible: isPaused()">{{ _('Resume') }}</span></button>
    <button class="btn span2" id="job_cancel" data-bind="click: cancel, enable: isOperational()  && loginState.isUser()" title="{{ _('Cancels the print job') }}"><i class="icon-stop"></i> {{ _('Cancel') }}</button>
</div>
<br />
<div id="shutdown_panel" class="row-fluid" data-bind="visible: loginState.isUser && isPaused()">

    <a class="btn btn-danger span3" data-bind="click: shutdown" id="job_shutdown">
        <i class="icon-off"></i>
        <span >{{ _('Shutdown') }}</span>
    </a>
    <br /><br />
    <span>
        <i class="icon-warning-sign"></i>
        {{ _('The shutdown operation saves the print state. You can power off your printer and resume printing at a later time.') }}
    </span>
    <br /><br /><br />

    <a href="#maintenance_dialog" data-bind="click: showMaintenanceFilamentChange" class="btn btn-primary" >
        <i class="icon-wrench"></i>
        {{ _('Change filament now') }}
    </a>
    <br /><br />
    <span>
        <i class="icon-warning-sign"></i>
        {{ _('This operation is needed if you want to print with a different color or if the filament available in the spool is not enough.') }}
    </span>
</div>
