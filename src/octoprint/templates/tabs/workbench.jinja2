{% assets "threejs_libs" %}
    <script type="text/javascript" src="{{ ASSET_URL }}"></script>
{% endassets %}

<div id="stl_container" ></div>

<div class="row-fluid">

    <button class="btn btn-primary span2" id="print_scene" onclick="startPrint();"
            data-bind="enable: loginState.isUser() && !connection.isConnecting()">
        <i class="icon-print" ></i>
        {{ _('Start Print...') }}
    </button>
    <span class="span6"></span>
    <button class="btn span2" id="save_scene"
            data-bind="" onclick="saveScene();">
        <i class="icon-save" ></i>
        {{ _('Save Scene') }}
    </button>

    <button class="btn span2" id="download_scene"
            data-bind="" onclick="downloadScene();">
        <i class="icon-download" ></i>
        {{ _('Download') }}
    </button>
</div>
<script>

    init();
    render();
    animate();

</script>
