{% assets "threejs_libs" %}
    <script type="text/javascript" src="{{ ASSET_URL }}"></script>
{% endassets %}

<div id="workbench-buttons" class="row-fluid worbench-top-buttons">

    <button class="btn btn-info span2" id="save_scene" onclick="BEEwb.main.saveScene();">
        <i class="icon-save" ></i>
        {{ _('Save Scene') }}
    </button>

    <button class="btn span2" id="download_scene" onclick="BEEwb.main.downloadScene();">
        <i class="icon-download" ></i>
        {{ _('Download') }}
    </button>
    <div class="span6">
        <div id="out-bound-msg" class="alert alter-warning workbench-alert" style="display: none;">
            <i class="icon-warning-sign"></i>
            {{ _('The model is out of the printing area.') }}
        </div>
    </div>
    <button class="btn btn-primary span2" id="print_scene"
            data-bind="click: startPrint, enable: loginState.isUser() && !connection.isConnecting()">
        <i class="icon-print" ></i>
        {{ _('Start Print...') }}
    </button>
</div>

<div id="stl_container" ></div>

<script>

    BEEwb.main.init();

</script>
